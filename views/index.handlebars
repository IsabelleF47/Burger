<h1>Burger Barn Baby!</h1>

<h2>Create and eat delicious burgers!</h2>

<h2>The variety is endless!</h2>

<ul id="uneaten-burger">
  {{#each burgers}}
    {{#unless this.eaten}}
      
        <div class="col-md-6 text-center ">
          <pre>  {{ this.id}} .{{this.name }} </pre>
        <button class="uneaten-button" type="submit" >Eat it!</button>
        </div>
        
    {{/unless}}
  {{/each}}
</ul>


<ul id="eaten-burgers">
  {{#each burgers}}
    {{#if this.eaten}}
    <pre> {{this.id}} . {{this.name}}</pre>
     <button type="submit" >Coming back soon!</button>
    {{/if}}
  {{/each}}
</ul>

<h2>Create a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>



  <button type="submit">Add Burger</button>

